
<%- include('common/head') %>

<body>
    <div class = "bg-image" 
        style="background-image: url('../images/horses2.png')"
        height: 400px> 

    <div class="wibble">
        <%- include('common/header') -%> 
        <main>
            <div class="container">
                <div class="containerHeader">
                    <h1>Edit Horse</h1>
                </div>

                <div class ="containerContent">
                    <h1 class="text-center">Update Horse</h1>
                        <div class="row justify-content-md-center">
                        <div class="col-">
                            <form method="POST">
                            <div class="form-group">
                                <label for="name">Horse Name</label>
                                <input
                                value="<%= horse.name %>"
                                type="text"
                                class="form-control"
                                id="name"
                                name="name"
                                placeholder="Enter Name"
                                />             
                            </div>

                            <div class="form-group">
                                <label for="name">Year of birth</label>
                                <input
                                value="<%= horse.yob %>"
                                type="text"
                                class="form-control"
                                id="yob"
                                name="yob"
                                />             
                            </div>

                            <div class="form-group">
                                <label for="name">Colour</label>
                                <input
                                value="<%= horse.colour %>"
                                type="text"
                                class="form-control"
                                id="colour"
                                name="colour"
                                />
                            </div>

                            <button type="submit" class="btn btn-primary">Submit</button>
                            </form>
                        </div>
                        </div>
                

                </div>
            </div>

        </main>

        <%- include('common/footer'); -%>
        </div>
    </div>
</div>  
</body>
</html>
